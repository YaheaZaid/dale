<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Dale" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="inputstyle" parent="Theme.MaterialComponents.DayNight">
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:background">@color/inputbackround</item>
    </style>
    <style name="splashscreentheem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splshimage</item>
        <item name="android:statusBarColor">@color/backgrounfsplashscreen</item>
    </style>
    <style name="textcolor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textColor">@color/inputbackround</item>
    </style>
    <style name="btn" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="backgroundTint">@color/btncolor</item>

    </style>
</resources>